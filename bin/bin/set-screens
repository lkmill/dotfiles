#!/bin/sh

case "$(hostname)" in
  "connor")
    xrandr --output DP-4 --primary --auto --output HDMI-0 --auto --left-of DP-4 --output DVI-I-1 --auto --right-of DP-4
    export x_display_left="HDMI-0"
    export x_display_main="DP-4"
    export x_display_right="DVI-I-1"
    ;;
  "bosse")
    xrandr --output DVI-I-1 --primary --auto --output DP-0 --left-of DVI-I-1 --auto --output DVI-D-0 --right-of DVI-I-1 --auto
    export x_display_left="DP-0"
    export x_display_main="DVI-I-1"
    export x_display_right="DVI-D-0"
    ;;
  "hans")
    #xrandr --output DVI-I-1 --primary --auto --output DP-1 --left-of DVI-I-1 --auto --output DP-3 --right-of DVI-I-1 --auto
    xrandr --output DVI-I-1 --primary --auto --output DP-1 --left-of DVI-I-1 --auto --output DVI-D-0 --right-of DVI-I-1 --auto
    export x_display_left="DP-1"
    export x_display_main="DVI-I-1"
    export x_display_right="DVI-D-0"
    ;;
  "lou")
    #xrandr --output DP1-1 --off --output DP1-2 --primary --auto --output DP1-3 --off --output eDP1 --right-of DP1-2 --auto
    export x_display_main="eDP1"
    export x_display_right="eDP1"
    ;;
esac
